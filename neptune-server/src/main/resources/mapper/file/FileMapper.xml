<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neptune.cloud.drive.server.mapper.FileMapper">

    <resultMap id="FileResultMap" type="com.neptune.cloud.drive.server.model.File">
            <id property="fileId" column="file_id" />
            <result property="filename" column="filename" />
            <result property="realPath" column="real_path" />
            <result property="fileSize" column="file_size" />
            <result property="fileSizeDesc" column="file_size_desc" />
            <result property="fileSuffix" column="file_suffix" />
            <result property="filePreviewContentType" column="file_preview_content_type" />
            <result property="identifier" column="identifier" />
            <result property="createUser" column="create_user" />
            <result property="createTime" column="create_time" />
    </resultMap>

    <sql id="Base_Column_List">
        file_id,filename,real_path,file_size,file_size_desc,file_suffix,
        file_preview_content_type,identifier,create_user,create_time
    </sql>
</mapper>
